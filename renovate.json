{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "develop"
  ],
  "ignoreDeps": ["postcss-url", "postcss-momentum-scrolling"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "packagePatterns": [ "eslint" ],
      "groupName": "eslint",
      "schedule": ["before 2am on monday"],
      "automerge": true,
      "automergeType": "branch"
    }, {
      "packagePatterns": [ "stylelint" ],
      "groupName": "stylelint",
      "schedule": ["before 2am on monday"],
      "automerge": true,
      "automergeType": "branch"
    }, {
      "packagePatterns": [ "snyk" ],
      "groupName": "snyk",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
