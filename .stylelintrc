{
  "processors": [
    "@mapbox/stylelint-processor-arbitrary-tags"
  ],
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order",
    "stylelint-config-css-modules"
  ],
  "ignoreFiles": [
    "./**/*.js"
  ],
  "rules": {
    "no-empty-source": null,
    "rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ]
  }
}
